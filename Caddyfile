# زنجیر⛓️ - Caddy Reverse Proxy Configuration
# Automatic HTTPS with Let's Encrypt (for domains)
# HTTP mode for IP addresses

# Check if DOMAIN looks like an IP address
# If IP, use HTTP only; if domain, use HTTPS

{$DOMAIN} {
    # Encode responses
    encode gzip zstd

    # Matrix .well-known endpoints
    handle /.well-known/matrix/server {
        header Content-Type application/json
        respond `{"m.server": "{$DOMAIN}:443"}`
    }

    handle /.well-known/matrix/client {
        header Content-Type application/json
        header Access-Control-Allow-Origin *
        respond `{"m.homeserver": {"base_url": "https://{$DOMAIN}"}, "m.identity_server": {"base_url": "https://vector.im"}}`
    }

    # Matrix Client-Server API
    handle /_matrix/* {
        reverse_proxy dendrite:8008
    }

    # Matrix Federation API
    handle /_dendrite/* {
        reverse_proxy dendrite:8008
    }

    # Element Web (default)
    handle {
        root * /srv/element
        file_server
        try_files {path} /index.html
    }

    # Security headers
    header {
        X-Frame-Options SAMEORIGIN
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
    }

    # Logging
    log {
        output stdout
        format console
    }
}
